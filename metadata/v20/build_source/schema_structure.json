{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/OpenEnergyPlatform/oemetadata/develop/metadata/v20/schema.json",
    "description": "Open Energy Platform (OEP) metadata schema latest",
    "type": "object",
    "properties": {
        "collection": {
            "$ref": "collection.json#"
        },
        "resources": {
            "description": "A collection of related data resource descriptions and metadata. This may include relational data models which are technically related",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "general": {
                        "$ref": "general.json#"
                    },
                    "context": {
                        "$ref": "context.json#"
                    },
                    "spatial": {
                        "$ref": "spatial.json#"
                    },
                    "temporal": {
                        "$ref": "temporal.json#"
                    },
                    "sources": {
                        "$ref": "sources.json#"
                    },
                    "licenses": {
                        "$ref": "licenses.json#"
                    },
                    "provenance": {
                        "$ref": "provenance.json#"
                    },
                    "resource": {
                        "$ref": "fields.json#"
                    },
                    "linkedData": {
                        "$ref": "linked_data.json#"
                    },
                    "review": {
                        "$ref": "review.json#"
                    }
                }
            },
            "title": "Resources"
        },
        "meta": {
            "$ref": "meta.json#"
        }
    },
    "additionalProperties": true
}